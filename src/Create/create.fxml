            <TextField fx:id="tableName" layoutX="180.0" layoutY="21.0" prefHeight="10.0" prefWidth="80.0" promptText="Enter text" />
            
            <Button layoutX="294.0" layoutY="11.0" mnemonicParsing="false" onAction="#columnCreate" prefHeight="40.0" prefWidth="80.0" text="컬럼 생성" />
            <Button layoutX="374.0" layoutY="11.0" mnemonicParsing="false" onAction="#columnDelete" prefHeight="40.0" prefWidth="80.0" text="컬럼 삭제" />
            
         </children>
      </AnchorPane>
      <VBox fx:id="columnVbox" prefHeight="450.0" prefWidth="400.0" />
