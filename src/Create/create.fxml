            <Button layoutX="319.0" layoutY="24.0" mnemonicParsing="false" onAction="#createTable" prefHeight="22.0" prefWidth="64.0" text="DB 반영" />
         
         </children>
      </AnchorPane>
   </children>
</VBox>
